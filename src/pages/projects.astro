---
import Navbar from "../components/Navbar";
import Layout from "../layouts/Layout.astro";

import tauPattern from "../assets/tau-pattern.svg";
import umPattern from "../assets/um-pattern.svg";
import terraPattern from "../assets/terra-pattern.svg";
import chiselOperatorPattern from "../assets/chisel-operator-pattern.svg";
import { ArrowRightIcon } from "@heroicons/react/24/outline";
import SEOFragment from "../components/SEOFragment.astro";
import { Image } from "astro:assets";

const description =
  "At Fyra Labs, we drive positive change through open-source technology. Explore our work and see how we're shaping the future.";
const seo = {
  title: "Our Projects",
  description,
  url: Astro.url.pathname,
};
---

<Layout title="Projects">
  <SEOFragment {...seo} slot="head" />

  <Navbar pathname={Astro.url.pathname} client:load />

  <div class="mx-6 mb-12">
    <div class="mx-auto max-w-4xl">
      <section class="my-14">
        <h1 class="text-5xl font-bold mb-2 dark:opacity-[92%]">Our Projects</h1>
        <h2 class="text-gray-800 dark:text-gray-300 text-lg">
          {description}
        </h2>
      </section>

      <div class="flex flex-col gap-6">
        <!-- https://bgjar.com/ -->

        <article
          class="flex bg-neutral-100 dark:bg-neutral-800 hover:shadow-md transition-all rounded-2xl min-h-64"
        >
          <Image
            src={tauPattern}
            alt="tauOS"
            class="object-cover w-1/2 hidden md:block rounded-l-2xl"
          />
          <div class="px-8 py-6 flex flex-col justify-center gap-2 md:w-1/2">
            <h1 class="font-bold text-3xl dark:opacity-[92%]">tauOS</h1>

            <p class="dark:opacity-[92%]">
              Discover the future of desktop computing with tauOS, currently in
              development. tauOS is designed with ease of use in mind, featuring
              human-centric design, an unbreakable core, and an syncing service
              that synchronizes files, configurations, keys, and more across all
              your devices.
            </p>

            <a
              href="https://tauos.co/"
              class="flex flex-row items-center gap-1 text-violet-700 dark:text-violet-300"
              >Explore <ArrowRightIcon className="h-4 w-4" /></a
            >
          </div>
        </article>

        <article
          class="flex bg-neutral-100 dark:bg-neutral-800 hover:shadow-md transition-all rounded-2xl min-h-64 flex-row-reverse"
        >
          <Image
            src={umPattern}
            alt="Ultramarine Linux"
            class="object-cover w-1/2 hidden md:block rounded-r-2xl"
          />
          <div class="px-8 py-6 flex flex-col justify-center gap-2 md:w-1/2">
            <h1 class="font-bold text-3xl dark:opacity-[92%]">
              Ultramarine Linux
            </h1>

            <p class="dark:opacity-[92%]">
              Ultramarine Linux is a Fedora-based distribution designed to stay
              out of your way and be easy to use. With Ultramarine, you can get
              up and running quickly, and get back to doing what you love.
            </p>

            <a
              href="https://ultramarine-linux.org/"
              class="flex flex-row items-center gap-1 text-violet-700 dark:text-violet-300"
              >Explore <ArrowRightIcon className="h-4 w-4" /></a
            >
          </div>
        </article>

        <article
          class="flex bg-neutral-100 dark:bg-neutral-800 hover:shadow-md transition-all rounded-2xl min-h-64"
        >
          <Image
            src={terraPattern}
            alt="tauOS"
            class="object-cover w-1/2 hidden md:block rounded-l-2xl"
          />
          <div class="px-8 py-6 flex flex-col justify-center gap-2 md:w-1/2">
            <h1 class="font-bold text-3xl dark:opacity-[92%]">Terra</h1>

            <p class="dark:opacity-[92%]">
              Terra is a repository that goes beyond what's available in Fedora.
              Experience quality and security with the latest packages, or
              distribute your own software on Fedora and other RPM-based
              distributions.
            </p>

            <a
              href="https://terra.fyralabs.com/"
              class="flex flex-row items-center gap-1 text-violet-700 dark:text-violet-300"
              >Explore <ArrowRightIcon className="h-4 w-4" /></a
            >
          </div>
        </article>

        <!-- https://fffuel.co/ <3 -->

        <article
          class="flex bg-neutral-100 dark:bg-neutral-800 hover:shadow-md transition-all rounded-2xl min-h-64 flex-row-reverse"
        >
          <Image
            src={chiselOperatorPattern}
            alt="Chisel Operator"
            class="object-cover w-1/2 hidden md:block rounded-r-2xl"
          />
          <div class="px-8 py-6 flex flex-col justify-center gap-2 md:w-1/2">
            <h1 class="font-bold text-3xl dark:opacity-[92%]">
              Chisel Operator
            </h1>

            <p class="dark:opacity-[92%]">
              Chisel Operator uses the Chisel project to effortlessly expose any
              Kubernetes cluster to the internet, even behind a firewall. The
              operator is fully automatic, integrating with cloud providers to
              automatically set up tunnels for you.
            </p>

            <a
              href="https://chisel.fyralabs.com"
              class="flex flex-row items-center gap-1 text-violet-700 dark:text-violet-300"
              >Explore <ArrowRightIcon className="h-4 w-4" /></a
            >
          </div>
        </article>
      </div>
    </div>
  </div>
</Layout>
