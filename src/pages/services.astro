---
import Navbar from "../components/Navbar";
import Layout from "../layouts/Layout.astro";
import consultingImage from "../assets/consulting.webp";
import { Image } from "@astrojs/image/components";

const description =
  "At Fyra Labs, we are driven by a mission to bring positive change through technology. From web design to strategy consulting, our comprehensive services are designed to help organizations and individuals reach their full potential. Let's bring about positive change together.";
---

<Layout title="Consulting">
  <Fragment slot="head">
    <meta property="og:title" content="Professional Services" />
    <meta property="og:url" content="https://fyralabs.com/services" />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="business.business" />
    <meta property="og:image" content="/logo.png" />
    <meta name="description" content={description} />
  </Fragment>

  <Navbar pathname={Astro.url.pathname} client:load />

  <div class="mx-6 mb-12">
    <div class="mx-auto max-w-5xl">
      <section class="flex items-center gap-12">
        <div class="flex-1 hidden lg:block">
          <!-- Yes, it works despite the TS error -->
          {/* @ts-expect-error */}
          <Image
            src={consultingImage}
            alt="Professional Services"
            class="rounded-2xl shadow-md bg-neutral-800"
          />
        </div>

        <div class="flex-1">
          <h1 class="font-bold text-5xl">Professional Services</h1>
          <p class="mt-3 text-gray-300">
            {description}
          </p>
        </div>
      </section>

      <section class="mt-6">
        <h1 class="font-bold text-3xl mb-8">Our Services</h1>

        <div class="grid grid-auto-fit-md gap-6">
          <div class="p-4 bg-neutral-800 shadow-md rounded-2xl">
            <p class="font-semibold text-2xl mb-3">Strategy</p>
            <p>
              Guide your business to success with our tailored strategy
              consulting services. We will work with you to develop a plan to
              meet your goals.
            </p>
          </div>

          <div class="p-4 bg-neutral-800 shadow-md rounded-2xl">
            <p class="font-semibold text-2xl mb-3">Operations</p>
            <p>
              Help streamline your daily operations by offering solutions to
              improve processes, reduce waste, and optimize use of resources.
            </p>
          </div>

          <div class="p-4 bg-neutral-800 shadow-md rounded-2xl">
            <p class="font-semibold text-2xl mb-3">Media Production</p>
            <p>
              Elevate your brand with professional-grade media production,
              including video production, photo editing, and graphic design.
            </p>
          </div>

          <div class="p-4 bg-neutral-800 shadow-md rounded-2xl">
            <p class="font-semibold text-2xl mb-3">Web Design</p>
            <p>
              Craft a digital presence that represents your brand and captivates
              your audience. Our web design services are personalized to meet
              your unique needs and goals.
            </p>
          </div>

          <div class="p-4 bg-neutral-800 shadow-md rounded-2xl">
            <p class="font-semibold text-2xl mb-3">Systems Engineering</p>
            <p>
              Keep your technology running smoothly with our expert systems
              engineering services, specializing in server and service
              management.
            </p>
          </div>

          <div class="p-4 bg-neutral-800 shadow-md rounded-2xl">
            <p class="font-semibold text-2xl mb-3">Software Development</p>
            <p>
              We design and develop software tailored to meet your unique needs.
              Our team works closely with you to bring your vision to life.
            </p>
          </div>
        </div>
      </section>

      <section class="mt-12 container mx-auto flex flex-wrap">
        <div class="lg:w-3/5 md:w-1/2 md:pr-16 lg:pr-0 pr-0">
          <h1 class="font-bold text-3xl text-white mb-3">
            Ready to go to the next level?
          </h1>
          <p>
            Take the first step towards unlocking your potential. Reach out to
            us today and let's work towards a brighter future together.
          </p>
        </div>
        <div
          class="lg:w-2/6 md:w-1/2 flex flex-col md:ml-auto w-full mt-6 md:mt-0 shadow-md rounded-2xl"
        >
          <div class="relative mb-4">
            <label for="name" class="leading-7 text-sm text-gray-200"
              >Name</label
            >
            <input
              type="text"
              id="name"
              name="name"
              class="w-full bg-neutral-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-fuchsia-900 rounded border border-gray-600 focus:border-fuchsia-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
            />
          </div>
          <div class="relative mb-4">
            <label for="email" class="leading-7 text-sm text-gray-200"
              >Email</label
            >
            <input
              type="email"
              id="email"
              name="email"
              class="w-full bg-neutral-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-fuchsia-900 rounded border border-gray-600 focus:border-fuchsia-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
            />
          </div>
          <button
            class="text-white bg-fuchsia-500 border-0 py-2 px-8 focus:outline-none hover:bg-fuchsia-600 rounded text-lg"
            >Contact Us</button
          >
          <p class="text-xs mt-3">We'll get back to you within 48 hours.</p>
        </div>
      </section>
    </div>
  </div>
</Layout>
