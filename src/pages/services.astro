---
import Navbar from "../components/Navbar";
import Layout from "../layouts/Layout.astro";
import consultingImage from "../assets/consulting.webp";
import { Image } from "@astrojs/image/components";
import SEOFragment from "../components/SEOFragment.astro";

const description =
  "At Fyra Labs, we are driven by a mission to bring positive change through technology. From web design to strategy consulting, our comprehensive services are designed to help organizations and individuals reach their full potential. Let's bring about positive change together.";
const seo = {
  title: "Professional Services",
  description,
  url: Astro.url.pathname,
};
---

<Layout title="Consulting">
  <SEOFragment {...seo} slot="head" />

  <Navbar pathname={Astro.url.pathname} client:load />

  <div class="mx-6 mb-12">
    <div class="mx-auto max-w-5xl">
      <section class="flex items-center gap-12">
        <div class="flex-1 hidden lg:block">
          <!-- Yes, it works despite the TS error -->
          {/* @ts-expect-error */}
          <Image
            src={consultingImage}
            alt="Professional Services"
            class="rounded-2xl hover:shadow-md transition-all bg-neutral-100 dark:bg-neutral-800"
          />
        </div>

        <div class="flex-1">
          <h1 class="font-bold text-5xl dark:opacity-[92%]">
            Professional Services
          </h1>
          <p class="mt-6 text-gray-800 dark:text-gray-300">
            {description}
          </p>
        </div>
      </section>

      <section class="mt-6">
        <h1 class="font-bold text-3xl mb-8 dark:opacity-[92%]">Our Services</h1>

        <div class="grid grid-auto-fit-md gap-6">
          <div
            class="p-4 bg-neutral-100 dark:bg-neutral-800 hover:shadow-md transition-all rounded-2xl"
          >
            <p class="font-semibold text-2xl mb-3 dark:opacity-[92%]">
              Strategy
            </p>
            <p class="dark:opacity-[92%]">
              Guide your business to success with our tailored strategy
              consulting services. We will work with you to develop a plan to
              meet your goals.
            </p>
          </div>

          <div
            class="p-4 bg-neutral-100 dark:bg-neutral-800 hover:shadow-md transition-all rounded-2xl"
          >
            <p class="font-semibold text-2xl mb-3 dark:opacity-[92%]">
              Operations
            </p>
            <p class="dark:opacity-[92%]">
              Help streamline your daily operations by offering solutions to
              improve processes, reduce waste, and optimize use of resources.
            </p>
          </div>

          <div
            class="p-4 bg-neutral-100 dark:bg-neutral-800 hover:shadow-md transition-all rounded-2xl"
          >
            <p class="font-semibold text-2xl mb-3 dark:opacity-[92%]">
              Media Production
            </p>
            <p class="dark:opacity-[92%]">
              Elevate your brand with professional-grade media production,
              including video production, photo editing, and graphic design.
            </p>
          </div>

          <div
            class="p-4 bg-neutral-100 dark:bg-neutral-800 hover:shadow-md transition-all rounded-2xl"
          >
            <p class="font-semibold text-2xl mb-3 dark:opacity-[92%]">
              Web Design
            </p>
            <p class="dark:opacity-[92%]">
              Craft a digital presence that represents your brand and captivates
              your audience. Our web design services are personalized to meet
              your unique needs and goals.
            </p>
          </div>

          <div
            class="p-4 bg-neutral-100 dark:bg-neutral-800 hover:shadow-md transition-all rounded-2xl"
          >
            <p class="font-semibold text-2xl mb-3 dark:opacity-[92%]">
              Systems Engineering
            </p>
            <p class="dark:opacity-[92%]">
              Keep your technology running smoothly with our expert systems
              engineering services, specializing in server and service
              management.
            </p>
          </div>

          <div
            class="p-4 bg-neutral-100 dark:bg-neutral-800 hover:shadow-md transition-all rounded-2xl"
          >
            <p class="font-semibold text-2xl mb-3 dark:opacity-[92%]">
              Software Development
            </p>
            <p class="dark:opacity-[92%]">
              We design and develop software tailored to meet your unique needs.
              Our team works closely with you to bring your vision to life.
            </p>
          </div>
        </div>
      </section>

      <section class="mt-12 container mx-auto flex flex-wrap">
        <div class="lg:w-3/5 md:w-1/2 md:pr-16 lg:pr-0 pr-0">
          <h1 class="font-bold text-3xl mb-3 dark:opacity-[92%]">
            Ready to go to the next level?
          </h1>
          <p class="text-gray-800 dark:text-gray-300">
            Take the first step towards unlocking your potential. Reach out to
            us today and let's work towards a brighter future together.
          </p>
        </div>
        <!-- TODO: I didn't even know this was a thing tbh. Maybe we want to handle this in a serverless function in the future. For now, this works and is quite nice IMO. -->
        <form
          action="mailto:contact@fyralabs.com"
          enctype="multipart/form-data"
          class="lg:w-2/6 md:w-1/2 flex flex-col md:ml-auto w-full mt-6 md:mt-0"
        >
          <div class="relative mb-4">
            <label
              for="subject"
              class="leading-7 text-sm text-gray-800 dark:text-gray-300"
              >Subject</label
            >
            <input
              type="text"
              id="subject"
              name="subject"
              class="w-full bg-neutral-300 dark:bg-neutral-800 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-violet-900 rounded border border-gray-600 focus:border-violet-500 text-base outline-none py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
              required
            />
          </div>
          <div class="relative mb-4">
            <label
              for="body"
              class="leading-7 text-sm text-gray-800 dark:text-gray-300"
              >Message</label
            >
            <textarea
              id="body"
              name="body"
              class="w-full bg-neutral-300 dark:bg-neutral-800 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-violet-900 rounded border border-gray-600 focus:border-violet-500 text-base outline-none py-1 px-3 transition-colors duration-200 ease-in-out"
              required></textarea>
          </div>
          <button
            class="text-white bg-violet-500 py-2 px-8 hover:bg-violet-600 focus:ring-violet-900 focus:border-violet-500 rounded text-lg"
            >Contact Us</button
          >
          <p class="text-xs mt-3">
            We'll get back to you within 48 hours. This will open your email
            client to complete.
          </p>
        </form>
      </section>
    </div>
  </div>
</Layout>
