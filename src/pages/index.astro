---
import Navbar from "../components/Navbar";
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon";
---

<Layout title="Welcome to Fyra Labs">
  <Fragment slot="head">
    <meta property="og:title" content="Welcome to Fyra Labs" />
    <meta property="og:url" content="https://fyralabs.com" />
    <meta
      property="og:description"
      content="Creating a better future through cutting-edge, open-source technology."
    />
    <meta property="og:type" content="business.business" />
    <meta property="og:image" content="/logo.png" />
    <meta
      name="description"
      content="Creating a better future through cutting-edge, open-source technology."
    />
  </Fragment>

  <!-- <img
    class="block h-[128px] w-auto absolute left-14 top-14"
    src="/logo.svg"
    alt="Fyra Labs"
  /> -->

  <main class="relative min-h-screen">
    <canvas
      id="background"
      class="absolute -z-20 top-0 left-0 right-0 bottom-0 w-full h-full"
    ></canvas>

    <Navbar pathname={Astro.url.pathname} client:load />

    <div
      class="bg-gradient-to-b from-transparent via-transparent to-black -z-10 absolute top-0 left-0 right-0 bottom-0 pointer-events-none"
    >
    </div>
    <div class="m-4 md:m-14 flex flex-col absolute bottom-0">
      <h1 class="font-bold text-3xl md:text-5xl">Welcome to Fyra Labs.</h1>
      <h2 class="md:text-lg">
        Creating a better future through cutting-edge, open-source technology
      </h2>
      <div class="mt-2 flex gap-3">
        <a
          href="https://twitter.com/teamfyralabs"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-violet-300 transition-all"
        >
          <Icon name="fa-brands:twitter" class="h-6" />
        </a>
        <a
          href="https://mastodon.fyralabs.com/@hq"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-violet-300 transition-all"
        >
          <Icon name="fa-brands:mastodon" class="h-6" />
        </a>
        <a
          href="https://github.com/fyralabs"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-violet-300 transition-all"
        >
          <Icon name="fa-brands:github" class="h-6" />
        </a>
        <a
          href="https://discord.gg/5fdPuxTg5Q"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-violet-300 transition-all"
        >
          <Icon name="fa-brands:discord" class="h-6" />
        </a>
      </div>
    </div>
  </main>
</Layout>

<style>
  html {
    @apply bg-black text-gray-50;
  }
</style>

<script src="../util/background.ts"></script>
