---
import Navbar from "../components/Navbar";
import Layout from "../layouts/Layout.astro";
import aboutImage from "../assets/about.webp";
import { Image } from "@astrojs/image/components";
---

<Layout title="Consulting">
  <Navbar pathname={Astro.url.pathname} client:load />

  <div class="mx-6 mb-6">
    <div class="mx-auto max-w-5xl">
      <section class="flex items-center gap-12">
        <div class="flex-1 hidden lg:block">
          <!-- Yes, it works despite the TS error -->
          {/* @ts-expect-error */}
          <Image
            src={aboutImage}
            alt="About Fyra Labs"
            class="rounded-2xl shadow-md bg-neutral-800"
          />
        </div>

        <div class="flex-1">
          <h1 class="font-bold text-5xl">Professional Services</h1>
          <p class="mt-3 text-gray-300">
            At Fyra Labs, we believe technology can make a positive impact. Our
            focus is to create advanced technology that prioritizes privacy, is
            open-source, and user-centric. Guided by these principles, we aim to
            develop products that make a real difference.
          </p>
        </div>
      </section>
    </div>
  </div>
</Layout>
