---
import Navbar from "../components/Navbar";
import Layout from "../layouts/Layout.astro";
import consultingImage from "../assets/consulting.webp";
import { Image } from "@astrojs/image/components";
---

<Layout title="Consulting">
  <Navbar pathname={Astro.url.pathname} client:load />

  <div class="mx-6 mb-6">
    <div class="mx-auto max-w-5xl">
      <section class="flex items-center gap-12">
        <div class="flex-1 hidden lg:block">
          <!-- Yes, it works despite the TS error -->
          {/* @ts-expect-error */}
          <Image
            src={consultingImage}
            alt="Professional Services"
            class="rounded-2xl shadow-md bg-neutral-800"
          />
        </div>

        <div class="flex-1">
          <h1 class="font-bold text-5xl">Professional Services</h1>
          <p class="mt-3 text-gray-300">
            At Fyra Labs, we are driven by a mission to bring positive change
            through technology. From web design to strategy consulting, our
            comprehensive services are designed to help organizations and
            individuals reach their full potential. Join us and let's bring
            about positive change together.
          </p>
        </div>
      </section>
    </div>
  </div>
</Layout>
