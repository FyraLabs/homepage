<form method="POST" action="/api/submit" class="flex flex-col w-full">
  <div class="relative mb-2">
    <label
      for="email"
      class="leading-7 text-sm text-gray-700 dark:text-gray-300">Email</label
    >
    <input
      type="email"
      id="email"
      name="email"
      class="w-full bg-neutral-300 dark:bg-neutral-800 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-violet-800 rounded border border-gray-600 text-base outline-none py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
      placeholder="siamese@nekocorp.com"
      maxlength="120"
      required
    />
  </div>
  <div class="relative mb-2">
    <label
      for="message"
      class="leading-7 text-sm text-gray-700 dark:text-gray-300">Message</label
    >
    <textarea
      id="message"
      name="message"
      class="w-full bg-neutral-300 dark:bg-neutral-800 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-violet-800 rounded border border-gray-600 text-base outline-none py-1 px-3 transition-colors duration-200 ease-in-out"
      placeholder="Let's work together..."
      required
      maxlength="600"></textarea>
  </div>
  <button
    type="submit"
    class="font-semibold text-gray-200 bg-violet-600 py-2 px-8 hover:bg-violet-700 focus:ring-violet-800 outline-none rounded text-lg text-center transition-colors"
    >Contact Us</button
  >
  <p class="text-xs mt-3">We'll get back to you as soon as possible.</p>
</form>
